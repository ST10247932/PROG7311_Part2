@model AgriEnergyConnects.Models.ViewModels.ProductFilterViewModel

@{
    ViewData["Title"] = "All Products";
}

<div class="container mt-5">
    <h2 class="fw-bold text-success">Products from Farmers</h2>

    <form method="get" class="mb-4">
        <div class="row">
            <!-- Category Filter -->
            <div class="col-md-3 mb-3">
                <label for="category" class="form-label">Category</label>
                <select id="category" name="category" class="form-select">
                    <option value="">All Categories</option>
                    @foreach (var cat in Model.Categories)
                    {
                        <option value="@cat" selected="@(cat == Model.Category ? "selected" : null)">
                            @cat
                        </option>
                    }
                </select>
            </div>

            <!-- Start Date Filter -->
            <div class="col-md-3 mb-3">
                <label for="startDate" class="form-label">Start Date</label>
                <input type="date" id="startDate" name="startDate" value="@(Model.StartDate?.ToString("yyyy-MM-dd"))" class="form-control" />
            </div>

            <!-- End Date Filter -->
            <div class="col-md-3 mb-3">
                <label for="endDate" class="form-label">End Date</label>
                <input type="date" id="endDate" name="endDate" value="@(Model.EndDate?.ToString("yyyy-MM-dd"))" class="form-control" />
            </div>

            <!-- Filter Button -->
            <div class="col-md-3 mb-3 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">Filter <i class="bi bi-funnel-fill ms-1"></i></button>
            </div>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover shadow-sm align-middle">
            <thead class="table-light text-center">
                <tr>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Production Date</th>
                    <th>Farmer</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.Products)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Category</td>
                        <td>@product.ProductionDate.ToString("yyyy/MM/dd")</td>
                        <td>@product.Farmer?.FullName  </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

